<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Dates and Appointments"
    android:id="@+id/buttonProfile"
    android:layout_marginTop="119dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Set New Date"
    android:id="@+id/buttonCalendar"
    android:layout_marginTop="50dp"
    android:layout_below="@+id/buttonProfile"
    android:layout_alignLeft="@+id/buttonProfile"
    android:layout_alignStart="@+id/buttonProfile"
    android:layout_alignRight="@+id/buttonProfile"
    android:layout_alignEnd="@+id/buttonProfile" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Friends Available"
    android:id="@+id/buttonFriends"
    android:layout_marginTop="50dp"
    android:layout_below="@+id/buttonCalendar"
    android:layout_alignRight="@+id/buttonCalendar"
    android:layout_alignEnd="@+id/buttonCalendar"
    android:layout_alignLeft="@+id/buttonCalendar"
    android:layout_alignStart="@+id/buttonCalendar" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Pending Appointments"
    android:id="@+id/buttonPending"
    android:layout_marginTop="50dp"
    android:layout_below="@+id/buttonFriends"
    android:layout_alignRight="@+id/buttonFriends"
    android:layout_alignEnd="@+id/buttonFriends"
    android:layout_alignLeft="@+id/buttonFriends"
    android:layout_alignStart="@+id/buttonFriends" />


    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Not available."
        android:textOn="I'm available!"
        android:id="@+id/buttonAvailable"
        android:checked="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to LunchBuddy!"
        android:textSize="20dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />


</RelativeLayout>
