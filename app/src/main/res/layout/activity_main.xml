<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="User Profile"
    android:id="@+id/buttonProfile"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="78dp" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Calendar"
    android:id="@+id/buttonCalendar"
    android:layout_marginTop="50dp"
    android:layout_below="@+id/buttonProfile"
    android:layout_alignLeft="@+id/buttonProfile"
    android:layout_alignStart="@+id/buttonProfile"
    android:layout_alignRight="@+id/buttonProfile"
    android:layout_alignEnd="@+id/buttonProfile" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Friends"
    android:id="@+id/buttonFriends"
    android:layout_marginTop="50dp"
    android:layout_below="@+id/buttonCalendar"
    android:layout_alignRight="@+id/buttonCalendar"
    android:layout_alignEnd="@+id/buttonCalendar"
    android:layout_alignLeft="@+id/buttonCalendar"
    android:layout_alignStart="@+id/buttonCalendar" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available"
        android:id="@+id/buttonAvailable"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="true"
        android:layout_toRightOf="@+id/buttonFriends"
        android:layout_toEndOf="@+id/buttonFriends" />


</RelativeLayout>
